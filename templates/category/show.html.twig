{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<h1>Category</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ category.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ category.Title }}</td>
			</tr>
			<tr>
				<th>Products</th>
				<td>
					{% for product in category.getProducts() %}
						<li>{{ product.Title }}</li>
					{% endfor %}
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_category_index') }}">back to list</a>

	<a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>

	{{ include('category/_delete_form.html.twig') }}
{% endblock %}
