{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}
    <h1>Review</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>UserAuth</th>
                <td>{{ review.UserAuth }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ review.Date ? review.Date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ review.Rating }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ review.Description }}</td>
            </tr>
            <tr>
                <th>ValidationState</th>
                <td>{{ review.ValidationState ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_review_index') }}">back to list</a>

    <a href="{{ path('app_review_edit', {'id': review.id}) }}">edit</a>

    {{ include('review/_delete_form.html.twig') }}
{% endblock %}
